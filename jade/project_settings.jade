include mixins.pug

doctype html
html(lang='ru')
  +dev_head('Dynamica project settings')
  
  body
    .page.subscribe_page
      header.page-header.navbar.navbar-default
        .container-fluid.globalwidth
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            
            a.navbar-brand(href='#'): img(src='img/logo.svg')
              
          nav.collapse.navbar-collapse.bs-navbar-collapse
            ul.nav.navbar-nav
              li.active
                a(href='projects.html') My projects
            ul.nav.navbar-right.hidden-xs
              li
                .user.dropdown
                  .arrow
                  a.user-toggle.dropdown-toggle(data-toggle='dropdown', href='#')
                    span.user-pic
                      img.img-circle(width='40', height='40', src='images/avatar1_40x40.jpg', alt='')
                    span.user-name
                      | Yaroslav Samoilov
                      i.icon.fa.fa-angle-down
                  .user-menu.dropdown-menu
                    ul
                      li
                        a(href='billing.html') Billing
                      li
                        a(href='profile.html') Profile
                      li
                        a(href='#') Help
                      li.clear
                        a(href='#') Log out
                        
      section.page-body
        .container-fluid.globalwidth
          section.subscribe_case.case
            .case-capt
              ul.nav.nav-pills
                li
                  a(href='profile.html') Back
            .case-cnt.wrap-b
              .form.form-horizontal
                form(method='post', action='')
                  .form-group
                    label.control-label.col-md-3(for='project_name') Project name
                    .col-md-7.col-sm-9
                      .control-box
                        input#project_name.form-control(value='text', placeholder='Project name')
                                          
                  .form-group
                    label.control-label.col-md-3.col-sm-3 Login with
                    .col-md-7.col-sm-9
                      .control-box
                        .btn-social.btn-connected.btn-connected-lg
                          .user-pic
                          .soc-btn-connect Shopify
                          a.subscribe_link(href='#') Disconnect

                  .form-group
                    label.control-label.col-md-3(for='ga_id') Google Analytics
                    .col-md-7.col-sm-9
                      .control-box
                        input#ga_id.form-control( placeholder='ID')
                                          
                  .form-group
                    label.control-label.col-md-3.col-sm-3 Data updating
                    .col-md-7.col-sm-9
                      .control-box
                        b Last update 4 hours ago
                        a.btn.data_update_btn.btn-danger-w(href='#') Update data imidiatelly
                        
                  .form-group
                    .col-md-offset-3.col-md-7.col-sm-offset-3.col-sm-9
                      button.btn.btn-lg.btn-danger(type='submit') Save
                      
                      .pull-right
                        a.project_rm_link(href='#') Delete this project
                      
      .page-footer
        .container-fluid.globalwidth
          ul.footer-menu
            li: a(href='#') Projects
            li: a(href='#') Team
            li: a(href='#') Profile
            li: a(href='#') Billing
            li: a(href='#') Support
            
          .footer-copyright All rights reserved Â© Osintsev. K.S. 2016
            
    +page_overlay()
