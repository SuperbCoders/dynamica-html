include mixins

doctype html
html(lang='ru')
  +dev_head('Dynamica subscribe')
  
  body
    .page.subscribe_page
      header.page-header.navbar.navbar-default
        .container-fluid.globalwidth
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            
            a.navbar-brand(href='#'): img(src='img/logo.svg')
              
          nav.collapse.navbar-collapse.bs-navbar-collapse
            ul.nav.navbar-nav
              li.active
                a(href='projects.html') My projects
            ul.nav.navbar-right.hidden-xs
              li
                .user.dropdown
                  .arrow
                  a.user-toggle.dropdown-toggle(data-toggle='dropdown', href='#')
                    span.user-pic
                      img.img-circle(width='40', height='40', src='images/avatar1_40x40.jpg', alt='')
                    span.user-name
                      | Yaroslav Samoilov
                      i.icon.fa.fa-angle-down
                  .user-menu.dropdown-menu
                    ul
                      li
                        a(href='billing.html') Billing
                      li
                        a(href='profile.html') Profile
                      li
                        a(href='#') Help
                      li.clear
                        a(href='#') Log out
                        
      section.page-body
        .container-fluid.globalwidth
          section.subscribe_case.case
            .case-capt
              ul.nav.nav-pills
                li
                  a(href='profile.html') Back
            .case-cnt.wrap-b
              .form.form-horizontal
                form(method='post', action='')
                  .form-group
                    label.control-label.col-md-3(for='input1') Payment
                    .col-md-9
                      .row: .col-lg-12
                        .pull-left
                          .subscribe_period: label.radio_control
                            input(type='radio' name='subscribe_period')
                            span.check_text $5 monthly
                          .subscribe_period: label.radio_control
                            input(type='radio' name='subscribe_period')
                            span.check_text $49 yearly, 
                              span.color_green Save 20%
                        .pull-right.subscribe_switcher_w
                          span Charge from
                          .subscribe_switcher: .dropdown
                            button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
                              | Bling-Blings account
                              span.fa.fa-angle-down

                            ul.dropdown-menu.dropdown-menu-right
                              li
                                a(href='#') Bling-Blings account
                              li
                                a(href='#') Apple Store
                              li
                                a(href='#') Helvetica 
                          
                      .row.subscribe_info: .col-lg-12
                        p.fw_400 $9.99/month including applicable taxes, billed monthly. <br> Your subscription will renew on April 30, 2016.
                        .subscribe_control
                          a.subscribe_link(href='#') View billing history
                        .subscribe_control
                          a.subscribe_link(href='#') Cancel subscription
                          
                  .form-group
                    label.control-label.col-md-3.col-sm-3
                      | Personal
                    
                    .col-md-7.col-sm-9
                      .control-box
                        input#input11.form-control(type='text', placeholder='Name', value='Yaroslav Samoilov')
                      .control-box
                        input.form-control(type='text', placeholder='Email adress')
                        
                  .form-group
                    label.control-label.col-md-3.col-sm-3 Login with
                    .col-md-7.col-sm-9
                      .control-box
                        a.btn-social.btn-facebook(href='#')
                          i.icon.fa.fa-facebook
                          | Facebook
                  
                        .btn-social.btn-connected
                          .user-pic
                            img.img-circle(src='images/avatar1_40x40.jpg')
                          .soc-btn-connect Google+
                          a.subscribe_link(href='#') Disconnect
                        
                  .form-group
                    label.control-label.col-md-3.col-sm-3(for='input2') Password
                    .col-md-7.col-sm-9
                      .control-box
                        input#input2.form-control(type='password', placeholder='New password')
                      .control-box
                        input.form-control(type='password', placeholder='Conﬁrm new password')
                      .control-box
                        input.form-control(type='password', placeholder='Current password')
                                          
                  .form-group
                    label.control-label.col-md-3.col-sm-3 Notify me about
                    .col-md-7.col-sm-9
                      .control-box
                        .subscribe_period: label.radio_control
                          input(type='checkbox')
                          span.check_text News
                        .subscribe_period: label.radio_control
                          input(type='checkbox')
                          span.check_text Subscription update
                  
                  .form-group
                    .col-md-offset-3.col-md-7.col-sm-offset-3.col-sm-9
                      button.btn.btn-lg.btn-danger(type='submit') Save
                      
      .page-footer
        .container-fluid.globalwidth
          ul.footer-menu
            li: a(href='#') Projects
            li: a(href='#') Team
            li: a(href='#') Profile
            li: a(href='#') Billing
            li: a(href='#') Support
            
          .footer-copyright All rights reserved © Osintsev. K.S. 2016
            
