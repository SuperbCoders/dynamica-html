include mixins

doctype html
html.land_v2(lang='ru')
    +dev_head('Dynamica land 2', false, false, false, false, false, true)

    body.land_page
        // page 1
        .page.full_h_page
            header.page-header.navbar.navbar-default(
            data-0='padding: 50px 0 20px; background-color: rgba(255,255,255,1);'
            data-400='padding: 10px 0 10px; background-color: rgba(255,255,255,.85);'
            )
                .container-fluid.globalwidth
                    .navbar-header
                        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        .navbar-project-switch
                            a.navbar-brand(href='#'): img(src='img/logo.svg')

                    nav.collapse.navbar-collapse.bs-navbar-collapse
                        ul.nav.navbar-right.hidden-xs.navbar-anon
                            li
                                a.menu_link(href='projects.html') Live Demo
                            li
                                a.menu_link(href='#') Pricing
                            li
                                a.btn.login_btn(href='#') Log in
            
            .page_inner
                .gl_table: .gl_table_cell
                    section.land_hero
                        .container-fluid.globalwidth
                            .row.dashboard-title-row.land_v1
                                .col-sm-12
                                    h1.text-center Carefully made analytics  <br> for your Shopify store
        
                                    .text-center
                                        a.btn.btn-lg.btn-danger.start_trial_btn(href='#') Start your free 30 day trial
    
                .hero_graph_block.heroGraph
                    .graph_3.areaChart_2.d3graph.hide_x_axis(style='opacity: .2;')
                    .graph_3.areaChart_2.d3graph.hide_x_axis(style='opacity: .4;')
                    .graph_3.areaChart_2.d3graph.hide_x_axis
                    .graph_tip.g_tip_pink.graph_tip_1(
                    data--1p-top='opacity: 1;')
                        .g_tip_val $389
                        .g_tip_date Revenue today
                    .graph_tip.g_tip_orange.graph_tip_2(
                    data--1p-top='opacity: 1;')
                        .g_tip_val 43
                        .g_tip_date Sales 23 February
                       
        // page 2
        .page
            .page_inner.major_data_section
                .gl_table: .gl_table_cell
                    section
                        .container-fluid.globalwidth
                            .row.dashboard-title-row.land_v1
                                .col-sm-12
                                    h2.text-center(style='margin-top: 30px;') All major data of your  <br>  store at single graph

                                    .graph-unit-holder: .graph-unit
                                        .graph-unit-large
                                            //-h5.graph-name Current status of your primary data
                                            .graph-filters.graph-filter-v1
                                                div(class="btn-group" role="group")
                                                    input#graph_filter_1(type='radio' hidden name='graph_filter' checked)
                                                    label( for='graph_filter_1' class="btn btn-default first") Day
                                                    input#graph_filter_2(type='radio' hidden name='graph_filter')
                                                    label( for='graph_filter_2' class="btn btn-default") Week
                                                    input#graph_filter_3(type='radio' hidden name='graph_filter')
                                                    label( for='graph_filter_3' class="btn btn-default last") Month

                                            .graph-block
                                                .graph_3.areaChartFamily_1.d3graph.hide_x_axis
                                                    #tooltip.graph-tooltip-holder.hidden_
                                                        #tooltip_dot.tooltip-dot
                                                        #tooltip_content.graph-tooltip

                                    //-.text-center
                                        a.hover_on_link(href='#') HOVER ON
        // page 3
        .page
            .page_inner.major_data_section
                .gl_table: .gl_table_cell
                    section
                        .container-fluid.wide_block
                            .row.overview_holder
                                .overview_box.dashboard-title-row.land_v1
                                    h2.text-center Store overview
                                        
                                    .overview_tip_v2
                                        p Your will know your customers and how often they making orders.
                                        p Whether it’s new or returned users. Don’t forget to check out average sales.
                                    
                                .col-sm-12
                                    .overview_block
                                        .overview_img
                                            img(src='img/Ipad.png')
                                        //-.overview_tip.ov_tip_left(
                                            data-100p-top='transform: translate(0%,100%); opacity: 0;'
                                            data-70p-top='transform: translate(0%,0%); opacity: 1;'
                                            data-20p-top='transform: translate(0%,0%); opacity: 1;'
                                            data-0-top='transform: translate(0%,-100%); opacity: 0;'
                                            )
                                            
                                            p Dashboard allow you to track store performance. Most important data about finances, customers and your products.
                                        
        
        // page 4
        .page
            .page_inner.major_data_section
                .gl_table: .gl_table_cell
                    section.major_data_section
                        .container-fluid.narrow_block(style='position: relative; z-index: 10;')
                            .row.dashboard-title-row.land_v1
                                .col-sm-12
                                    h2.text-center(
                                    data-100p-top='transform: translate(0%,200%); opacity: 0;'
                                    data-70p-top='transform: translate(0%,0%); opacity: 1;'
                                    data-10p-top='transform: translate(0%,0%); opacity: 1;'
                                    data-0-top='transform: translate(0%,-100%); opacity: 0;'
                                    ) Most relevant metrics
                                        
                                    ul.relevant_list
                                        li
                                            .relevant_block
                                                .relevant_caption Finance
                                                ul.relevant_metrics
                                                    li Monthly Recurring 
                                                    li Net Revenue
                                                    li Average Revenue Per User
                                                    li Failed Charges
                                                    li Lifetime Value
                                        li
                                            .relevant_block
                                                .relevant_caption Customers
                                                ul.relevant_metrics
                                                    li Monthly Recurring 
                                                    li Net Revenue
                                                    li Average Revenue Per User
                                                    li Failed Charges
                                                    li Lifetime Value
                                        li
                                            .relevant_block
                                                .relevant_caption Products
                                                ul.relevant_metrics
                                                    li Monthly Recurring 
                                                    li Net Revenue
                                                    li Average Revenue Per User
                                                    li Failed Charges
                                                    li Lifetime Value

                        .container-fluid
                            .relevant_img
                                img(src='img/relevant_metrics.png')
                            
        // page 5
        .page
            .page_inner.testimonials_section
                .gl_table: .gl_table_cell
                    section
                        .container-fluid.wide_block
                            .row.dashboard-title-row.land_v1
                                .col-sm-12
                                    h2.text-center Testimonials
                                    
                                    .textimonials_slider_holder
                                        .swiper-container.testimonialSlider
                                            .swiper-wrapper
                                                +loop_while(6)
                                                    .swiper-slide
                                                        +testimon_slide()
                                        .swiper-controls
                                            .swiper-button-next.fa.fa-long-arrow-left
                                            .swiper-button-prev.fa.fa-long-arrow-right
                                                        
        // page 6
        .page
            .page_inner.pricing_section
                .gl_table: .gl_table_cell
                    section
                        .container-fluid.wide_block
                            .row.dashboard-title-row.land_v1
                                .col-sm-12
                                    h2.text-center Pricing
                                    
                                    .pricing_block
                                        .pricing_form
                                            .pricing_price $5
                                            .pricing_period month
                                            ul.pricing_features
                                                li Store metrics
                                                li Unlimited stores
                                                li Google analytics
                                                li Detailed Metrics
                                                li Support
                                            .pricing_controls
                                                a.btn.btn-lg.btn-danger-w.pricing_btn(href='#') Get started for free
                                            .pricing_share For annual payment  <br> 48$ per year

        // page 7
        .page
            .page_inner.weekly_reporting_section
                .gl_table: .gl_table_cell
                    section
                        .container-fluid.wide_block
                            .row.dashboard-title-row.land_v1
                                .col-sm-12
                                    h2.text-center And also weekly  <br>  reporting 
                                    
                                    ul.report_block
                                        li
                                            .report_img
                                                img(src='img/report_1.png')
                                        li
                                            .report_img
                                                img(src='img/report_2.png')
        // page 8
        .page
            .page_inner.demo_section
                .gl_table: .gl_table_cell
                    section
                        .container-fluid.wide_block
                            .row.dashboard-title-row.land_v1
                                .col-sm-12
                                    h2.text-center Look at demo at first
                                    .demo_controls
                                        a.btn.btn-lg.btn-danger.pricing_btn(href='#') Live demo

                .demo_block
                    img(src='img/Ipad.png')
                                        
                .page-footer
                    .container-fluid.wide_block
                        .footer_logo
                            a.navbar-brand(href='#'): img(src='img/logo_w.svg')
                            
                            
                        .land_footer-menu
                            ul
                                li: a(href='#') Tour
                                li: a(href='#') Demo
                                li: a(href='#') Pricing
                            ul
                                li: a(href='#') About
                                li: a(href='#') Blog
                                li: a(href='#') Support
                            ul
                                li: a(href='#') What's New
                                li: a(href='#') Terms
    
                        ul.footer_share
                            li
                                a.f_sh_link(href='#')
                                    i.fa.fa-facebook
