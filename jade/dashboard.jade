                      a(href='#') set up
                      |  it now
                  .graph-block
                     .graph_2.lineAreaChart_1.d3graph.hide_x_axis

            .dashboard-caption
                h3.caption-text Customers overview
                i.icon.fa.fa-angle-right
                
            .graph-unit-holder.graph-unit-hover: .row
              +loop_while(2)
                .col-lg-3.col-md-4.col-sm-6
                  .graph-unit
                    a.graph-u-link(href='total_revenu.html')
                    h5.graph-name Gross Revenue
                    .graph-value 
                      span.val $4,490
                      sup.graph-dynamica.dynamica_up +8%
                    .graph-block
                       .graph_2.areaChart_1.d3graph.hide_x_axis
                                      
              .col-lg-3.col-md-4.col-sm-6
                .graph-unit
                  a.graph-u-link(href='total_revenu.html')
                  h5.graph-name New & repeat customers
                  .graph-value 
                    span.val 3.2
                    sup.graph-dynamica.dynamica_up +8%
                  .graph-block
                     .graph_1.donutChart_1.d3graph.hide_x_axis
                         
              .col-lg-3.col-md-4.col-sm-6
                .graph-unit
                  a.graph-u-link(href='total_revenu.html')
                  h5.graph-name Gross Revenue
                  .graph-value 
                    span.val $4,490
                    sup.graph-dynamica.dynamica_up +8%
